<%- include('../../partials/html_header.ejs') %> 
<main>
  <div class="container-fluid px-4">
      <h1 class="mt-4"><%= pageTitle %></h1>
      <ol class="breadcrumb mb-4">
          <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
          <li class="breadcrumb-item active"><%= pageTitle %></li>
      </ol>
      <!-- <div class="card mb-4">
          <div class="card-body">
              DataTables is a third party plugin that is used to generate the demo table below. For more information about DataTables, please visit the
              <a target="_blank" href="https://datatables.net/">official DataTables documentation</a>
              .
          </div>
      </div> -->
      <div class="card mb-4">
          <div class="card-header">
              
              <a href="/books/create" class="btn btn-primary" ><i class="fas fa-plus me-1"></i> Add Book</a>
          </div>
          <div class="card-body">
              <table id="datatablesSimple">
                  <thead>
                      <tr>
                          <th>Title</th>
                          <th>Author</th>
                          <th>Created At</th>
                          <th>Action</th>
                      </tr>
                  </thead>
                  <tfoot>
                      <tr>
                        <th>Title</th>
                        <th>Author</th>
                        <th>Created At</th>
                        <th>Action</th>
                      </tr>
                  </tfoot>
                  <tbody>
                    <% books.forEach(function(book) { %>
                      <tr>
                          <td><%= book.title %></td>
                          <td><%= book.author %></td>
                          <td><%= book.created_at %></td>
                          <td>
                            <a href="/books/<%= book.id %>/edit" class="btn btn-primary btn-sm"><i class="fas fa-edit"></i></a>
                            <a href="/books/<%= book.id %>/delete" class="btn btn-danger btn-sm"><i class="fas fa-trash"></i></a>
                          </td>
                      </tr>
                    <% }); %>
                  </tbody>
              </table>
          </div>
      </div>
  </div>
</main>
<%- include('../../partials/html_footer.ejs') %>
